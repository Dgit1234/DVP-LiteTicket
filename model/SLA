
var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var ObjectId = Schema.ObjectId;
var ticketFilterSchema = require('./TicketFilter').ticketFilterSchema;


var slaSchema = new Schema({

    title: { type: String, required: true, unique: true},
    description: String,
    priority: { type: Number, required: true },
    company: { type: Number, required: true },
    tenant: { type: Number, required: true },
    filter: {all: [ticketFilterSchema], any: [ticketFilterSchema]}
    matrix: [{priority: {type:String, enum: ['urgent','high','normal','low'], require:true} criteria:{type:String, enum: ['wait','response','update','resolution'],default:'wait'}, target: {type:Number, require:true}, on_fail: [{operations: [{field: { type: String, required: true},  value: {}}]}]}],
    created_at: {type:Date,default: Date.now,require:true},
    updated_at: {type:Date,default: Date.now,require:true},

});



var SLA = mongoose.model('SLA', slaSchema);
module.exports.SLA = SLA;

